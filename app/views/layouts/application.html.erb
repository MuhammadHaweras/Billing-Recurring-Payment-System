<!DOCTYPE html>
<html>
  <head>
    <title>BillingPaymentSystem</title>
    <meta name='viewport' content='width=device-width,initial-scale=1'>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no'>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <% if user_signed_in? && current_user.role == 'admin' %>
       <%= render partial: 'shared/navbar_admin' %>
     <% elsif user_signed_in? %>
       <%= render partial: 'shared/navbar_buyer' %>  
     <% end %>
     <div class='container'>
       <%= render partial: 'shared/flash' %>

       <% if user_signed_in? %>
         <p class="my-4">Hi <strong><%= current_user.name %></strong> </p>
         <p>your role is <%= current_user.role %></p>
           Logged in as: <strong><%= current_user.email %> </strong>
           <hr>
       <% else %>
        <div class='d-flex justify-content-center align-items-center mt-4'>
         <div class='btn-group' role='group' aria-label='group'>
           <%= link_to 'Sign Up', new_user_registration_path, class: 'navbar-link btn btn-primary' %>
           <%= link_to 'Log In', new_user_session_path, class: 'navbar-link btn btn-success' %>
          </div> 
        </div>  
       <% end %>
       <%= yield %>
    </div>   
  </body> 
</html>
