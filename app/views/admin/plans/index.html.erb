<p class="my-4">
  <%= link_to 'Send Invitation', new_user_invitation_path, class: 'btn btn-lg btn-primary'%>
</p>
<p> <%= link_to 'New Plan', new_admin_plan_path, class: 'btn btn-lg btn-primary'%></p>
 
<% @plans.each do |plan| %>
  <div class="card my-2">
  <h5 class="card-header"><%= plan.plan_name %></h5>
    <div class="card-body">
      <h5 class="card-title"><%= plan.monthly_fee %></h5>
      <div class="btn-group mr-2" role="group" aria-label="links">
        <%= link_to 'Show', admin_plan_path(plan), class:'btn btn-primary'%>
        <%= link_to 'Edit', edit_admin_plan_path(plan), class:'btn btn-info'%>
        <%= link_to 'Destroy', admin_plans_path(plan), method: :delete,
                               class:'btn btn-danger', data: { confirm: 'Are you sure?'} %>
      </div>
    </div>
  </div>
<% end %>  


